// In this code we have make our own object:

var json = { "name": "John", "age": 30, "city": "New York"}

function SayHello(name) {   
    var result;
    result = "Hello " + name;
    return result;
}

const person = {
    name: 'John',
    age: 30, 
    hello: SayHello
};

console.log(person.hello(person.name)); 
